/dts-v1/;
/plugin/;

#include "mediatek/mt6785-lisbon-common-overlay.dtsi"
/* Board match root node */
/ {
	fragment@model {
		target-path = "/";
		__overlay__ {
			mot,model = "lisbon";
			mot,board-id = <0x41 0xC000>;
		};
	};
};

&spi1 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-names = "default";
	pinctrl-0 = <&spislv_pins_default>;
	spislv@0 {
		compatible = "mediatek,spi_slave";
		reg = <0>;
		spi-max-frequency = <55000000>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <1>;
		low-speed-tick-delay = /bits/ 8 <1>;
		low-speed-early-trans = /bits/ 8 <0>;
		high-speed-tick-delay = /bits/ 8 <2>;
		high-speed-early-trans = /bits/ 8 <1>;
		slave-drive-strength = /bits/ 8 <3>;
	};
};
&pio {
	spislv_pins_default: spislv_mode_default {
		pins_cmd_dat {
			pinmux = <PINMUX_GPIO63__FUNC_SPI2_MI>,
				<PINMUX_GPIO65__FUNC_SPI2_MO>,
				<PINMUX_GPIO66__FUNC_SPI2_CLK>,
				<PINMUX_GPIO64__FUNC_SPI2_CSB>;
			drive-strength = <3>;
		};
	};
};

#include <lisbon_evt/cust.dtsi>
